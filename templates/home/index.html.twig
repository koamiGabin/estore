 {% extends "base.html.twig" %}

 {% block title %}Acceuil{% endblock %}

 {% block body %}
 <h1> Nos Dernier Biens !</h1>

<div class='row'>

    {% for article in articles %}

        <div class="card col-md-4" style="width: 18rem;">
            <p class="date"> Ajout√© le {{ article.createdAt | date("d/m/y") }} a {{ article.createdAt | date("h:i:s") }}
            par <span class="author">{{article.author}}</span></p>  
            <a  href="{{ path('show',{'id':article.id})}}"> <img class="card-img-top" src="/assets/blog/images/{{article.image}}" alt="{{article.title}}"></a>
            <div class="card-body">
                <h5 class="card-title">{{article.title}}</h5>
               
                <a href="{{ path('show',{'id':article.id})}}" class="btn btn-primary">En Savoir plus </a>
            </div>
        </div>
    {% endfor %} 
</div>
 {% endblock %}